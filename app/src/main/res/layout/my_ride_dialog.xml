<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="8dp"
            android:text="Sorgente: "
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/sorgente_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="8dp"
            android:text="Destinazione: "
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/destinazione_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="8dp"
            android:text="Targa: "
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/targa_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="8dp"
            android:text="Dettagli Veicolo: "
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/dettagli_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="8dp"
            android:text="Passeggeri: "
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/passeggeri_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



</LinearLayout>